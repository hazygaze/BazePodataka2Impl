<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="360.0" style="-fx-border-width: 0;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controllers.ZaposleniController">
   <center>
      <VBox maxHeight="400.0" maxWidth="450.0" nodeOrientation="RIGHT_TO_LEFT">
         <children>
            <VBox nodeOrientation="RIGHT_TO_LEFT">
               <VBox.margin>
                  <Insets bottom="7.0" left="7.0" right="7.0" top="7.0" />
               </VBox.margin>
               <children>
                  <HBox nodeOrientation="RIGHT_TO_LEFT" spacing="10.0">
                     <children>
                        <TextField fx:id="txtJmbg" minWidth="150.0" />
                        <Label text="JMBG:">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                           <padding>
                              <Insets top="4.0" />
                           </padding>
                        </Label>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </HBox>
                  <HBox nodeOrientation="RIGHT_TO_LEFT" spacing="10.0">
                     <children>
                        <TextField fx:id="txtImePrez" minWidth="150.0" />
                        <Label text="Ime i Prezime:">
                           <padding>
                              <Insets top="4.0" />
                           </padding>
                        </Label>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </HBox>
                  <HBox nodeOrientation="RIGHT_TO_LEFT" spacing="10.0">
                     <children>
                        <TextField fx:id="txtEmail" minWidth="150.0" />
                        <Label text="E-mail:">
                           <padding>
                              <Insets top="4.0" />
                           </padding>
                        </Label>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </HBox>
                  <HBox nodeOrientation="RIGHT_TO_LEFT" spacing="10.0">
                     <children>
                        <TextField fx:id="txtTelefon" minWidth="150.0" />
                        <Label text="Telefon:">
                           <padding>
                              <Insets top="4.0" />
                           </padding>
                        </Label>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </HBox>
                  <HBox nodeOrientation="RIGHT_TO_LEFT" spacing="10.0">
                     <children>
                        <TextField fx:id="txtFax" minWidth="150.0" />
                        <Label text="Fax:">
                           <padding>
                              <Insets top="4.0" />
                           </padding>
                        </Label>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </HBox>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="7.0" left="7.0" right="7.0" top="7.0" />
         </padding>
      </VBox>
   </center>
   <top>
      <HBox style="-fx-background-color: #4EC0CB;" BorderPane.alignment="CENTER">
         <children>
            <Label text="ZAPOSLENI" textFill="WHITE">
               <padding>
                  <Insets bottom="5.0" left="10.0" right="5.0" top="5.0" />
               </padding>
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </top>
   <bottom>
      <ToolBar nodeOrientation="RIGHT_TO_LEFT" prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <items>
            <Button fx:id="btnClose" minWidth="50.0" mnemonicParsing="false" onAction="#close" text="Close"  />
          <Button fx:id="btnSave" minWidth="50.0" mnemonicParsing="false" text="Save" onAction="#save" />
        </items>
      </ToolBar>
   </bottom>
</BorderPane>
